<UserControl x:Class="Round.WPF.MusicPlayer.Module.AppControls.VideoListButton"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:local="clr-namespace:Round.WPF.MusicPlayer.Module.AppControls"
         mc:Ignorable="d" Height="220" Width="280">
    <Grid>
        <Button Margin="10,10,10,10" d:LayoutOverrides="HorizontalAlignment, VerticalAlignment" Click="Button_Click">
            <Grid Height="195" Width="255">
                <Image x:Name="ImageShow" Margin="-1,0,7,51" d:LayoutOverrides="HorizontalAlignment, VerticalAlignment"/>
                <Label x:Name="TitleShow" Content="Label" Margin="0,148,6,10" d:LayoutOverrides="HorizontalAlignment" FontSize="12" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Microsoft YaHei"/>
            </Grid>
        </Button>
    </Grid>
</UserControl>
